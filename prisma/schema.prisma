// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     Int      @id @default(autoincrement())
  username               String   @unique
  password               String?  // Optioneel - null als wachtwoord nog niet gezet is
  role                   String   // "admin" of "user"
  requiresPasswordChange Boolean  @default(true)  // Moet gebruiker wachtwoord instellen?
  createdAt              DateTime @default(now())
}

model OilSample {
  id          Int      @id @default(autoincrement())
  oNumber     String   @unique  // o-nummer
  sampleDate  DateTime?         // datum afname monsters (optioneel - alleen voor genomen monsters)
  location    String            // locatie
  description String            // omschrijving
  oilType     String?           // type olie (optioneel)
  remarks     String?           // opmerkingen (optioneel)
  isTaken     Boolean           // of monster genomen is (true = groen, false = rood)
  isDisabled  Boolean  @default(false)  // monster is geannuleerd/niet nodig (grijze status)
  photoUrl    String?           // optionele foto URL als bewijsvoering
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Settings {
  id        Int      @id @default(autoincrement())
  key       String   @unique  // Settings key (bijv. "theme", "columns")
  value     String              // JSON string met de settings waarde
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  userId     Int?                // Optioneel - bij login failures is er geen userId
  username   String              // Gebruikersnaam voor makkelijk filteren
  action     String              // Bijv. "LOGIN", "CREATE_SAMPLE", "DELETE_USER"
  details    String?             // JSON string met extra details
  ipAddress  String?             // IP adres van de request
  userAgent  String?             // Browser/device info
  success    Boolean  @default(true)  // Of de actie geslaagd is
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

// ============================================
// VOORRAADBEHEER
// ============================================

model Product {
  id            Int      @id @default(autoincrement())
  brand         String              // Merk (bijv. "Shell", "Mann Filter")
  type          String              // Type (bijv. "Helix Ultra", "HU 716/2 x")
  articleNumber String?             // Artikelnummer (optioneel)
  category      String              // Categorie (bijv. "Filters", "Olie", "Vetten")
  location      String   @default("Hoofdmagazijn")  // Locatie waar product ligt
  unit          String   @default("stuks")  // Eenheid (stuks, liters, kg)
  minStock      Int      @default(0)        // Minimale voorraad voor waarschuwing
  description   String?             // Optionele omschrijving
  isActive      Boolean  @default(true)     // Of product actief is
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  stockItems     StockItem[]
  stockMovements StockMovement[]

  @@index([category])
  @@index([brand])
  @@index([articleNumber])
}

model StockItem {
  id        Int      @id @default(autoincrement())
  productId Int
  quantity  Int      @default(0)   // Huidige voorraad
  location  String   @default("Hoofdmagazijn")  // Locatie van voorraad
  updatedAt DateTime @updatedAt

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, location])  // Één stock item per product per locatie
  @@index([productId])
  @@index([location])
}

model StockMovement {
  id        Int      @id @default(autoincrement())
  productId Int
  type      String              // "IN" of "OUT"
  quantity  Int                 // Aantal (altijd positief)
  location  String   @default("Hoofdmagazijn")
  reason    String?             // Reden/opmerking
  userId    Int?                // Wie heeft de mutatie gedaan
  username  String?             // Gebruikersnaam voor referentie
  createdAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([type])
  @@index([createdAt])
}

// ============================================
// CONTACTEN
// ============================================

model Contact {
  id        Int      @id @default(autoincrement())
  company   String              // Bedrijfsnaam
  name      String?             // Contactpersoon (optioneel)
  email     String?             // E-mailadres
  phone     String?             // Telefoonnummer
  address   String?             // Adres
  notes     String?             // Algemene notities
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  contactNotes ContactNote[]

  @@index([company])
  @@index([name])
}

model ContactNote {
  id        Int      @id @default(autoincrement())
  contactId Int
  content   String              // Inhoud van de notitie
  userId    Int?                // Wie heeft de notitie gemaakt
  username  String?             // Gebruikersnaam voor referentie
  createdAt DateTime @default(now())

  contact Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@index([contactId])
  @@index([createdAt])
}
