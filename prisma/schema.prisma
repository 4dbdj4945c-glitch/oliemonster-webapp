// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     Int      @id @default(autoincrement())
  username               String   @unique
  password               String?  // Optioneel - null als wachtwoord nog niet gezet is
  role                   String   // "admin" of "user"
  requiresPasswordChange Boolean  @default(true)  // Moet gebruiker wachtwoord instellen?
  createdAt              DateTime @default(now())
}

model OilSample {
  id          Int      @id @default(autoincrement())
  oNumber     String   @unique  // o-nummer
  sampleDate  DateTime?         // datum afname monsters (optioneel - alleen voor genomen monsters)
  location    String            // locatie
  description String            // omschrijving
  oilType     String?           // type olie (optioneel)
  remarks     String?           // opmerkingen (optioneel)
  isTaken     Boolean           // of monster genomen is (true = groen, false = rood)
  isDisabled  Boolean  @default(false)  // monster is geannuleerd/niet nodig (grijze status)
  photoUrl    String?           // optionele foto URL als bewijsvoering
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Settings {
  id        Int      @id @default(autoincrement())
  key       String   @unique  // Settings key (bijv. "theme", "columns")
  value     String              // JSON string met de settings waarde
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  userId     Int?                // Optioneel - bij login failures is er geen userId
  username   String              // Gebruikersnaam voor makkelijk filteren
  action     String              // Bijv. "LOGIN", "CREATE_SAMPLE", "DELETE_USER"
  details    String?             // JSON string met extra details
  ipAddress  String?             // IP adres van de request
  userAgent  String?             // Browser/device info
  success    Boolean  @default(true)  // Of de actie geslaagd is
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([createdAt])
}
